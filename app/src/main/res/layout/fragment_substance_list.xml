<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <FrameLayout
        android:tag="frag_list"
        android:id="@+id/fragment_substance_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SubstanceListFragment">

        <TextView
            android:id="@+id/txt_add_pills"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Add your pills and supplements"/>

        <!-- TODO: Update blank fragment layout -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_view_subst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/fab_add"
            android:layout_height="wrap_content"
            app:rippleColor="@color/colorPrimary"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/purple"
            android:layout_marginEnd="32dp"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_plus_white"
            app:layout_constraintEnd_toEndOf="parent" />




    </FrameLayout>
</layout>